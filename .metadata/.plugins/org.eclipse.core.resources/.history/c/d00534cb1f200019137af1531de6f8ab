package com.cf.example.star.patterns;

public class SimplePyramid {

	public static void main(String[] args) {
		Pyramids p = new Pyramids();
		p.simplePyramid();
	}
}

class Pyramids {
	void simplePyramid() {
		for (int i = 0; i <= 5; i++) {
			for (int j = 0; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
	}
}
